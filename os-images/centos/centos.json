{
    "min_packer_version": "1.0.4",
    "variables": {
      "image_name": "{{env `IMAGE_NAME`}}",
      "file": "{{ env 'FILE'}}"
    },
    "builders": [
    {
    "type": "googlecompute",
    "image_name": "{{user `image_name`}}",
    "image_family": "new-lowes-centos",
    "project_id": "spicy-carbon",
    "source_image_family": "centos-7",
    "zone": "us-east4-a",
    "subnetwork": "default",
    "ssh_username": "centos"
    }
    ],
    "provisioners": [
    {
    "type": "file",
    "source": "./goss",
    "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "./os-images/{{user `file`}}/goss.yaml",
      "destination": "/tmp/goss/"
    },
    {
    "type": "shell",
    "script": "./os-images/{{user `file`}}/install.sh"
    }
    ]
}